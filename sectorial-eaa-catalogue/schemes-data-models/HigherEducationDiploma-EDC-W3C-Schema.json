{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/schema/edc-w3c-highered-full-aligned.json",
  "title": "Updated EDC-W3C Higher Education Diploma Credential (Full ELM Alignment)",
  "description": "Schema for validating an EBSI-compliant Higher Education Diploma credential using hasClaim and specifiedBy.",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "VerifiableCredential"
      }
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string"
            }
          }
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSchema": {
      "type": "object",
      "required": [
        "id",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "id",
        "type",
        "givenName",
        "familyName",
        "dateOfBirth",
        "hasClaim"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "givenName": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object"
            }
          ]
        },
        "familyName": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object"
            }
          ]
        },
        "dateOfBirth": {
          "type": "string",
          "format": "date"
        },
        "hasClaim": {
          "type": "object",
          "required": [
            "title",
            "awardingDate",
            "awardedBy",
            "specifiedBy"
          ],
          "properties": {
            "title": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object"
                }
              ]
            },
            "awardingDate": {
              "type": "string",
              "format": "date"
            },
            "awardedBy": {
              "type": "object",
              "required": [
                "awardingBody"
              ],
              "properties": {
                "awardingBody": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": [
                      "legalName"
                    ],
                    "properties": {
                      "legalName": {
                        "oneOf": [
                          {
                            "type": "string"
                          },
                          {
                            "type": "object"
                          }
                        ]
                      },
                      "homepage": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "contentURL": {
                              "type": "string"
                            }
                          }
                        }
                      },
                      "identifier": {
                        "type": "object",
                        "properties": {
                          "notation": {
                            "type": "string"
                          },
                          "schemeID": {
                            "type": "string"
                          }
                        }
                      },
                      "location": {
                        "type": "object",
                        "properties": {
                          "country": {
                            "type": "string"
                          },
                          "prefLabel": {
                            "type": "object"
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "specifiedBy": {
              "type": "object",
              "required": [
                "eqfLevel",
                "educationSubject"
              ],
              "properties": {
                "eqfLevel": {
                  "type": "string"
                },
                "educationSubject": {
                  "type": "object",
                  "properties": {
                    "notation": {
                      "type": "string"
                    },
                    "prefLabel": {
                      "type": "object"
                    }
                  }
                },
                "qualificationCode": {
                  "type": "string"
                }
              }
            },
            "subAchievement": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "title",
                  "grade",
                  "awardingDate",
                  "ectsCreditPoints"
                ],
                "properties": {
                  "title": {
                    "oneOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "object"
                      }
                    ]
                  },
                  "grade": {
                    "type": "object",
                    "properties": {
                      "gradeValue": {
                        "type": "string"
                      },
                      "gradeScale": {
                        "type": "string"
                      }
                    }
                  },
                  "awardingDate": {
                    "type": "string",
                    "format": "date"
                  },
                  "ectsCreditPoints": {
                    "type": "number"
                  },
                  "additionalNote": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "noteLiteral": {
                          "type": "object"
                        }
                      }
                    }
                  }
                }
              }
            },
            "additionalNote": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "noteLiteral": {
                    "type": "object"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}