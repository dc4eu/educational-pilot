{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tsr.ebsi.europa.eu/schemas/euusc-uppersecondaryeducation-certificate.schema.json",
  "title": "European Upper Secondary Education Certificate",
  "description": "Profile schema extending the base EDC-W3C-VC to define upper secondary school-leaving certificate credentials.",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://api-pilot.ebsi.eu/trusted-schemas-registry/v3/schemas/0x411a2c5880fe8bd97229546044f55b65846d272594511815cd5b89f000dc3da7"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "const": [
            "VerifiableCredential",
            "EuropeanDigitalCredential",
            "EuropeanUpperSecondaryEducationCertificate"
          ]
        },
        "credentialSubject": {
          "type": "object",
          "required": [
            "id",
            "type",
            "dateOfBirth",
            "familyName",
            "givenName",
            "hasClaim"
          ],
          "properties": {
            "hasClaim": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": [
                  "type",
                  "title",
                  "awardedBy",
                  "specifiedBy"
                ],
                "properties": {
                  "type": {
                    "type": "array",
                    "contains": {
                      "const": "LearningAchievement"
                    }
                  },
                  "title": {
                    "type": "object"
                  },
                  "awardedBy": {
                    "type": "object",
                    "required": [
                      "awardingDate",
                      "awardingBody"
                    ]
                  },
                  "specifiedBy": {
                    "type": "object",
                    "required": [
                      "qualification"
                    ],
                    "properties": {
                      "qualification": {
                        "type": "object",
                        "required": [
                          "eqfLevel"
                        ]
                      },
                      "additionalNote": {
                        "type": "array"
                      }
                    }
                  },
                  "proves": {
                    "type": "array",
                    "items": {
                      "type": "object"
                    }
                  },
                  "entitlesTo": {
                    "type": "array",
                    "items": {
                      "type": "object"
                    }
                  },
                  "agent": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "array"
                      },
                      "name": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}